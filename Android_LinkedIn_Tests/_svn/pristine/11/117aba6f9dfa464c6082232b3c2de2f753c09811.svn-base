package com.linkedin.android.screens.base;

import junit.framework.Assert;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;

import com.jayway.android.robotium.solo.Solo;
import com.linkedin.android.screens.inbox.ScreenInbox;
import com.linkedin.android.screens.more.ScreenGroupsAndMore;
import com.linkedin.android.screens.updates.ScreenUpdates;
import com.linkedin.android.screens.you.ScreenYou;
import com.linkedin.android.utils.LayoutUtils;
import com.linkedin.android.utils.Logger;
import com.linkedin.android.utils.Rect2DP;

/**
 * Base class for screens with 'in' button in left top corner.
 * 
 * @author alexander.makarov
 * @created Aug 6, 2012 4:35:35 PM
 */
public abstract class BaseINScreen extends BaseScreen {

    // CONSTANTS ------------------------------------------------------------
    static final Rect2DP IN_BUTTON_RECT = new Rect2DP(0.0f, 28.0f, 54.6f, 49.3f);
    static final Rect2DP RIGHT_NAV_BUTTON_RECT = new Rect2DP(265.4f, 28.0f, 54.6f, 49.3f);
    static final float SEARCHBAR_HEIGHT_DP = 48.0f;

    // PROPERTIES -----------------------------------------------------------

    // CONSTRUCTORS ---------------------------------------------------------
    /**
     * 
     * @param activityClassname
     */
    public BaseINScreen(String activityClassname) {
        super(activityClassname);
    }

    // METHODS --------------------------------------------------------------
    /*
     * (non-Javadoc)
     * 
     * @see com.linkedin.android.screens.BaseScreen#verify()
     */
    @Override
    abstract public void verify();

    /**
     * Returns 'IN' button.
     * 
     * @return if exist 'IN' button {@code ImageView}, else <b>null</b>
     */
    public static ImageView getINButton() {
        for (ImageView view : getSolo().getCurrentImageViews()) {
            if (view == null)
                return null;
            if (LayoutUtils.isViewPlacedInLayout(view, LayoutUtils.UPPER_LEFT_BUTTON_LAYOUT)) {
                Rect2DP viewRect = new Rect2DP(view);
                if (viewRect.isSizeEqual(IN_BUTTON_RECT.width, IN_BUTTON_RECT.height, 1.0f)) {
                    return view;
                }
            }
        }
        return null;
    }

    /**
     * Returns button witch placed in right from search bar in navigation bar.
     * 
     * @return if exist right button {@code ImageView}, else <b>null</b>
     */
    public static ImageView getRightButtonInNavigationBar() {
        for (ImageView view : getSolo().getCurrentImageViews()) {
            if (LayoutUtils.isViewPlacedInLayout(view, LayoutUtils.UPPER_RIGHT_BUTTON_LAYOUT)) {
                Rect2DP viewRect = new Rect2DP(view);
                if (viewRect.isSizeEqual(RIGHT_NAV_BUTTON_RECT.width, RIGHT_NAV_BUTTON_RECT.height,
                        1.0f)) {
                    return view;
                }
            }
        }
        return null;
    }

    /**
     * Returns search bar.
     * 
     * @return if exist search bar {@code EditText}, else <b>null</b>
     */
    public static EditText getSearchBar() {
        for (EditText view : getSolo().getCurrentEditTexts()) {
            if (LayoutUtils.isViewPlacedInLayout(view, LayoutUtils.SEARCH_BAR_LAYOUT)) {
                Rect2DP viewRect = new Rect2DP(view);
                if (Math.abs(viewRect.height - SEARCHBAR_HEIGHT_DP) < 1.0f) {
                    return view;
                }
            }
        }
        return null;
    }

    /**
     * Verifies 'IN' button.
     */
    public static void verifyINButton() {
        Assert.assertNotNull("'IN' button is not presented", getINButton());
    }

    /**
     * Verifies button witch placed in right from search bar in navigation bar.
     * 
     * @param buttonName
     *            is name of button for logging
     */
    public static void verifyRightButtonInNavigationBar(String buttonName) {
        Assert.assertNotNull("'" + buttonName + "' button is not presented",
                getRightButtonInNavigationBar());
    }

    /**
     * Verifies buttons 'Updates', 'You', 'Inbox' and 'More...' in head of
     * screen.
     */
    public static void verifyINButtons() {
        Assert.assertNotNull("'Updates' button not present", getSolo().getButton("Updates"));
        Assert.assertNotNull("'You' button not present", getSolo().getButton("You"));
        Assert.assertNotNull("'Inbox' button not present", getSolo().getButton("Inbox"));
        Assert.assertNotNull("'More...' button not present", getSolo().getButton("More..."));
    }

    /**
     * Verifies search bar in head of screen.
     */
    public static void verifySearchBar() {
        Assert.assertNotNull("Searchbar is not present", getSearchBar());
    }

    /**
     * Taps on 'IN' button.
     */
    public static void tapOnINButton() {
        ImageView inButton = getINButton();
        Assert.assertNotNull("'IN' button is not presented", inButton);

        Logger.i("Tapping on 'IN' button");
        getSolo().clickOnView(inButton);
    }

    /**
     * Taps on button witch placed in right from search bar in navigation bar.
     * 
     * @param buttonName
     *            is name of button for logging
     */
    public void tapOnRightButtonInNavigationBar(String buttonName) {
        ImageView rightButton = getRightButtonInNavigationBar();
        Assert.assertNotNull("'" + buttonName + "' button is not presented", rightButton);

        Logger.i("Tapping on '" + buttonName + "' button");
        getSolo().clickOnView(rightButton);
    }

    /**
     * Taps on 'Updates' button.
     */
    public static void tapOnUpdatesButton() {
        Button button = getSolo().getButton("Updates");
        Assert.assertNotNull("'Updates' button not present", button);
        Assert.assertTrue("'Updates' button not shown", button.isShown());

        Logger.i("Tapping on 'Updates' button");
        getSolo().clickOnView(button);
    }

    /**
     * Taps on 'You' button.
     */
    public static void tapOnYouButton() {
        Button button = getSolo().getButton("You");
        Assert.assertNotNull("'You' button not present", button);
        Assert.assertTrue("'You' button not shown", button.isShown());

        Logger.i("Tapping on 'You' button");
        getSolo().clickOnView(button);
    }

    /**
     * Taps on 'Inbox' button.
     */
    public static void tapOnInboxButton() {
        Button button = getSolo().getButton("Inbox");
        Assert.assertNotNull("'Inbox' button not present", button);
        Assert.assertTrue("'Inbox' button not shown", button.isShown());

        Logger.i("Tapping on 'Inbox' button");
        getSolo().clickOnView(button);
    }

    /**
     * Taps on 'More...' button.
     */
    public static void tapOnMoreButton() {
        Button button = getSolo().getButton("More...");
        Assert.assertNotNull("'More...' button not present", button);
        Assert.assertTrue("'More...' button not shown", button.isShown());

        Logger.i("Tapping on 'More...' button");
        getSolo().clickOnView(button);
    }

    /**
     * Opens 'Updates' screen.
     * 
     * @return {@code ScreenUpdates} with just opened 'Updates' screen.
     */
    public ScreenUpdates openUpdatesScreen() {
        tapOnINButton();
        tapOnUpdatesButton();

        return new ScreenUpdates();
    }

    /**
     * Opens 'You' screen.
     * 
     * @return {@code ScreenYou} with just opened 'You' screen.
     */
    public ScreenYou openYouScreen() {
        tapOnINButton();
        tapOnYouButton();

        return new ScreenYou();
    }

    /**
     * Opens 'Inbox' screen.
     * 
     * @return {@code ScreenInbox} with just opened 'Inbox' screen.
     */
    public ScreenInbox openInboxScreen() {
        tapOnINButton();
        tapOnInboxButton();

        return new ScreenInbox();
    }

    /**
     * Opens 'More' screen.
     * 
     * @return {@code ScreenGroupsAndMore} with just opened 'More' screen.
     */
    public ScreenGroupsAndMore openMoreScreen() {
        tapOnINButton();
        tapOnMoreButton();

        return new ScreenGroupsAndMore();
    }
}
